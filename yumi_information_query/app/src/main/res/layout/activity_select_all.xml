<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@mipmap/main2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="12dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageview_back"
            android:layout_width="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="288dp"
            android:layout_marginLeft="0dp"
            android:layout_toStartOf="@+id/imageview_shuaxin"
            android:padding="0dp"
            android:src="@drawable/yumi01" />
        <ImageView
            android:id="@+id/textView"
            android:layout_width="260dp"
            android:layout_height="100dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal|center_vertical"
            android:background="@drawable/quick_select" />
        <ImageView
            android:id="@+id/imageview_shuaxin"
            android:layout_width="40dp"
            android:layout_height="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="0dp"
            android:layout_gravity="center_vertical"
            android:background="@mipmap/return_right"
            android:padding="0dp"
            android:layout_alignBottom="@+id/imageview_back"
            android:layout_alignTop="@+id/imageview_back"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>

    <TextView
        android:layout_marginTop="70dp"
        android:id="@+id/textview"
        android:textSize="17dp"
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="535dp"
        android:layout_weight="0.99" />
    <Button
        android:layout_marginTop="5dp"
        android:textSize="18dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="读出全部数据"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/button2"
        android:id="@+id/read_xlsx"
        android:onClick="onReadClick"
        />
    <Button
        android:layout_marginTop="5dp"
        android:textSize="18dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="清除文本"
        android:background="@drawable/button2"
        android:id="@+id/qingchuwenben"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:onClick="qingchuwenben"
        />
</LinearLayout>
