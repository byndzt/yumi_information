<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient
                android:angle="90"
                android:endColor="#F7F7F7"
                android:centerColor="#FFF68F"
                android:startColor="#F7F7F7" />
            <corners android:radius="0dp" />
            <stroke android:width="1dp" android:color="#99ffff" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="270"
                android:endColor="#93ecdd"
                android:centerColor="#eaf5a4"
                android:startColor="#d0efc9" />
            <corners android:radius="0dp" />
            <stroke android:width="1dp" android:color="#1b1b1b" />
        </shape>
    </item>
</selector>